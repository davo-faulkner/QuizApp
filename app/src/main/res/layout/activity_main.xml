<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.davo.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:background="@color/colorPrimaryLight"
            android:text="@string/instructions_textView"
            android:textColor="@color/textColor"
            android:textSize="20sp"/>

        <TextView
            style="@style/questionTextViewStyle"
            android:text="@string/question1_textView"/>

        <CheckBox
            android:id="@+id/checkbox_q1o1"
            android:text="@string/question1_option1_text"
            style="@style/optionStyle"/>

        <CheckBox
            android:id="@+id/checkbox_q1o2"
            android:text="@string/question1_option2_text"
            style="@style/optionStyle"/>

        <CheckBox
            android:id="@+id/checkbox_q1o3"
            android:text="@string/question1_option3_text"
            style="@style/optionStyle"/>

        <CheckBox
            android:id="@+id/checkbox_q1o4"
            android:text="@string/question1_option4_text"
            style="@style/optionStyle"/>

        <View
            style="@style/grayLineStyle"/>

        <TextView
            style="@style/questionTextViewStyle"
            android:text="@string/question2_textView"/>

        <RadioButton
            android:id="@+id/radio_q2o1"
            android:onClick="onQ2RadioButtonClicked"
            android:text="@string/question2_option1_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q2o2"
            android:onClick="onQ2RadioButtonClicked"
            android:text="@string/question2_option2_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q2o3"
            android:onClick="onQ2RadioButtonClicked"
            android:text="@string/question2_option3_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q2o4"
            android:onClick="onQ2RadioButtonClicked"
            android:text="@string/question2_option4_text"
            style="@style/optionStyle"/>

        <View
            style="@style/grayLineStyle"/>

        <TextView
            style="@style/questionTextViewStyle"
            android:text="@string/question3_textView"/>

        <RadioButton
            android:id="@+id/radio_q3o1"
            android:onClick="onQ3RadioButtonClicked"
            android:text="@string/question3_option1_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q3o2"
            android:onClick="onQ3RadioButtonClicked"
            android:text="@string/question3_option2_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q3o3"
            android:onClick="onQ3RadioButtonClicked"
            android:text="@string/question3_option3_text"
            style="@style/optionStyle"/>

        <RadioButton
            android:id="@+id/radio_q3o4"
            android:onClick="onQ3RadioButtonClicked"
            android:text="@string/question3_option4_text"
            style="@style/optionStyle"/>

        <View
            style="@style/grayLineStyle"/>

        <TextView
            style="@style/questionTextViewStyle"
            android:text="@string/question4_textView"/>

        <EditText
            android:id="@+id/q4_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:imeOptions="actionDone"
            android:hint="@string/enter_answer_here"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:onClick="submitAnswers"
            android:text="@string/button_text" />
    </LinearLayout>
</ScrollView>